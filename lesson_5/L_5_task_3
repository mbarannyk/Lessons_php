<?php
    
    /*Написать функцию которая первым аргументом принимает символ(по умолчанию #) и число(по умолчанию 5) 
    после чего рисует пирамиду следующего вида, Где второй аргумент это одновременно и количество рядов 
    и количество печатаемых символов 
    */
    
    function fun($symbol, Int $num) {
        $repeat = str_repeat($symbol, $num);
        for ($i = 1; $i <= $num; $i++) {
        $repeat = str_repeat($symbol, $i); {
        echo "$repeat\n";
            }       
        }
    }
    echo fun('#', 5);
