<?php
/*Написать рекурсивную функцию которая принимает два аргумента, первый массив а вторым значение для поиска. 
В случае если значение было найдено возвращает его ключ иначе false. пользоваться стандартной функцией 
для поиска в массиве нельзя. Учтите что массив может быть многомерный.
*/

function search($array, $item) {
    if (in_array($item, $array)) {
        foreach ($array as $key => $val) { 
       if (gettype($val) == "array") {
       search($val, $item);
       } elseif ($val == $item){
         return ($key);
         } 
       }
        }
    else {return ('false');
    } 
    }

    
  


$a = [3 => 'яблоко', 
     '7' => 'мешок' ,
	1 => 'апельсин', 
	'6'  => 'пакет',
	5 => 'виноград', 
	'12'  => 'ящик']; 
	
 var_dump(search($a, 'виноград'));
