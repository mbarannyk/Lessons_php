<?php
/*Написать функцию которая принимает первым аргументом массив и выводит 
все его элементы. Учтите что массив может быть многомерный*/

function arr($array) {
    for ($i = 0; $i < count($array); $i++) {
    foreach ($array as $key => $val) {
        echo "$key => $val\n";
    }
    return;
}
}
$a = [3 => 'яблоко', '7' => 'мешок',
	1 => 'апельсин', '8'  => 'пакет',
	5 => 'виноград', '12'  => 'ящик']; 
	
arr($a);
