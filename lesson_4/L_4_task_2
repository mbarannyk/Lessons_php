<?php
/* Написать функцию которая принимает число от 1 до 7 и возвращает день недели Если число не входит в заданый диапазон то возвращает сообщение об ошибке
*/
function day(int $a): string
{switch ($a) {
case 1:
return "Monday";
break;
case 2:
return "Tuesday";
break;
case 3:
return "Wednesday";
break;
case 4: 
return "Thursday";
break;
case 5: 
return "Friday";
break;
case 6:
return "Saturday";
break;
case 7: 
return "Sunday";
break;
default:
    return "error";
}
}
$dayofweek = day(rand(1,15));
echo $dayofweek;
