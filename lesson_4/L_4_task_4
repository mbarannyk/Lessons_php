<?php

/*Написать функцию которая рекурсивно выводит все делители переданого числа(для 21 это 7 и 3)
*/
/* будем перебирать делители от 1 до половины делимого ($a)*/

function div( int $a, int $b) {
     if ($b > $a / 2) {
        return $a;
    } elseif ($a % $b == 0) {
        echo "$b\n";
        return div($a, ++$b);
   } else { 
        return div($a, ++$b);
    }
    }
  $c = div(rand(1,100), 1);
      echo $c;
